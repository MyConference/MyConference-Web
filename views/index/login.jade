extends ../layout

block contents
  .panel.panel-default

    .panel-heading
      h4 Log in

    .panel-body 
      form.form-horizontal(action="/login" method="post" role="form")
        .form-group
          label.col-sm-2(for="email-label") E-mail
          .col-sm-10
            input.form-control(name="email" id="login-email" type="email" placeholder="E-Mail" value=(session.lastBody.email || ''))
        .form-group
          label.col-sm-2(for="password-label") Password
          .col-sm-10
            input.form-control(name="password" id="login-password" type="password" placeholder="Password")
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-primary(type="submit") Log in
