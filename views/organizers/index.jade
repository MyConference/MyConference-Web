extends ../layout

block contents
  .panel.panel-default

    .panel-heading
      .pull-right
        a.btn.btn-default(href=("/organizers/new?conference="+conference.id))
          i.fa.fa-plus
          | &nbsp; Add Organizer

      h4 Organizers

      .clearfix

    .panel-body.
      This is the list of organizers of the conference.

    table.table.table-striped.table-bordered
      tr
        th Name           
        th Origin
        th Details
        th Group

      for doc in conference.organizers
        tr
          td= doc.name
          td= doc.origin
          td= doc.details
          td= doc.group

      else
        tr
          td(colspan="3") No organizers found