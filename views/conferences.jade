extends layout

block contents
  .panel.panel-default

    .panel-heading
      .pull-right
        a.btn.btn-default(href="/conferences/new")
          i.fa.fa-plus
          | &nbsp; New Conference

      h4 Conferences

      .clearfix

    table.table.table-striped.table-bordered
      tr
        th Name
        th Description
        th Role

      for conference in conferences
        tr
          td= conference.name
          td= conference.description
          td= conference.role

      else
        tr
          td(colspan="2") No conferences found