extends layout

block contents
  .panel.panel-default

    .panel-heading
      .pull-right
        a.btn.btn-default(href="/conferences/new")
          i.fa.fa-plus
          | &nbsp; New Conference

      h4 Conferences

      .clearfix

    .panel-body
      table.table
        tr
          th Name
          th Description

        for conference in conferences
          tr
            td= conference.name
            td= conference.description

        else
          tr
            td(colspan="2") No conferences found