extends ../layout

block contents
  .panel.panel-default

    .panel-heading
      h4 Add Annoucement

    .panel-body
      form.form-horizontal(role="form" method="post" action="/annoucements/new")

        input(type="hidden" name="conference" value=conference.id)

        .form-group
          label.col-sm-2(for="annoucement-title") Title
          .col-sm-10
            input#annoucement-title.form-control(type="text" name="title" value=(data.title ? data.title : null) placeholder="Annoucement Title")

        .form-group
          label.col-sm-2(for="annoucement-body") Body
          .col-sm-10
            input#annoucement-body.form-control(type="text" name="body" value=(data.body ? data.body : null) placeholder="Annoucement Body")

        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type="submit") Add Annoucement