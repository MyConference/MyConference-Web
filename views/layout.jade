doctype html
html
	head
		title My Conference

		meta(name="viewport" content="width=device-width, initial-scale=1.0")

		link(rel="stylesheet" type="text/css" href="/css/bootstrap.css")
		link(rel="stylesheet" type="text/css" href="/css/styles.css")

		script(type="text/javascript" src="//code.jquery.com/jquery.js")
		script(type="text/javascript" src="/js/bootstrap.js")

	body
		nav.navbar.navbar-fixed-top.navbar-inverse(role="navigation"): .container
			.navbar-header
				button(type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar

				a.navbar-brand(href="/") My Conference

			#navbar-collapse.collapse.navbar-collapse
				ul.nav.navbar-nav
					if session.loginData
						li: a(href="/conferences") Conferences

				ul.nav.navbar-nav.navbar-right
					if session.loginData
						li: a(href="/logout") Log out
					else
						li: a(href="/login") Log in
						li: a(href="/signup") Sign up


		.container
			for message in flash('error')
				div.alert.alert-danger.alert-dismissable
					button.close(type="button" data-dismiss="alert" aria-hidden="true") &times;
					!= message
			for message in flash('success')
				div.alert.alert-success.alert-dismissable
					button.close(type="button" data-dismiss="alert" aria-hidden="true") &times;
					!= message

			block contents
